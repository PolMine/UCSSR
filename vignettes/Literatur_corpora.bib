copyright = {Springer Fachmedien Wiesbaden GmbH, ein Teil von Springer Nature 2019},
isbn = {9783658213077},
language = {ger},
pages = {1103-1116},
publisher = {Springer Fachmedien Wiesbaden},
title = {Text Mining},
year = {2019},
